# .env.example - Copy to .env and fill in your details
# This file reflects the standardized variable names used by the application.

# --- General App Config ---

# --- Logging ---
# Set the log level for the application. Options: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# --- Provider Selection ---
# Determines which LLM provider to use: 'openai' or 'azure'.
LLM_PROVIDER="openai"

# --- Standard OpenAI Settings (if LLM_PROVIDER="openai") ---
# Your standard OpenAI API key.
OPENAI_API_KEY="your-openai-api-key"
# The specific model to use for vision tasks.
OPENAI_MODEL_NAME="gpt-4o-mini"
# Optional: Use a custom base URL for OpenAI-compatible APIs (e.g., local LLM server).
OPENAI_BASE_URL=


# --- Azure OpenAI Settings (if LLM_PROVIDER="azure") ---
# Your Azure OpenAI resource endpoint.
AZURE_OPENAI_ENDPOINT="your-azure-endpoint"
# The API key for your Azure OpenAI resource.
AZURE_OPENAI_API_KEY="your-azure-api-key"
# The deployment name for your vision-capable model in Azure.
AZURE_OPENAI_DEPLOYMENT_NAME="your-deployment-name"
# The API version for Azure OpenAI.
OPENAI_API_VERSION="2024-02-01"

